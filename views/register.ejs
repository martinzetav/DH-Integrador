    <!DOCTYPE html>
    <html lang="en">
    <%- include("./partials/head") %>
    <body>
        <%- include("./partials/header") %>
        <main>
            <section class="form-section">
                <h1>Registro</h1>
                <form action="/users/register" method="POST">
                        <div class="form-group">
                            <label for="first-name">Nombres</label>
                            <input type="text" id="first-name" name="firstName"
                            value="<%= locals.oldData ? oldData.firstName : null %>">
                            <% if (locals.errors && errors.firstName) { %>
                            <p><%= errors.firstName.msg %></p>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="last-name">Apellidos</label>
                            <input type="text" id="last-name" name="lastName" 
                            value="<%= locals.oldData ? oldData.lastName : null %>">
                            <% if (locals.errors && errors.lastName) { %>
                                <p><%= errors.lastName.msg %></p>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="phone">Teléfono</label>
                            <input type="tel" id="phone" name="phone"
                            value="<%= locals.oldData ? oldData.phone : null %>">
                            <% if (locals.errors && errors.phone) { %>
                                <p><%= errors.phone.msg %></p>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email"
                            value="<%= locals.oldData ? oldData.email : null %>">
                            <% if (locals.errors && errors.email) { %>
                                <p><%= errors.email.msg %></p>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" id="password" name="password">
                            <% if (locals.errors && errors.password) { %>
                                <p><%= errors.password.msg %></p>
                            <% } %>
                        </div>
                        <!-- <div class="form-group">
                            <label for="confirm-password">Confirmar Contraseña</label>
                            <input type="password" id="confirm-password" name="confirm-password" required>
                        </div> -->
                        <button type="submit">Registrarse</button>
                        <p class="mensaje__form-p">¿Ya tienes una cuenta? <a href="/users/login" class="mensaje__form-a">Inicia Sesión</a></p>
                </form>
            </section>
        </main>
        
        <%- include("./partials/footer") %>
    </body>
    </html>
