<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head") %>
<body>
    <%- include("./partials/header") %>
    <main>
        <section class="product-detail-section">
            <div class="product-detail-container">
                <div class="product-image">
                    <img src="/images/<%= product.image %>" alt="<%= product.name %>">
                </div>
                <div class="product-info">
                    <h1 class="product-name"><%= product.name %></h1>
                    <p class="product-color">Color: <%= product.color %></p>
                    <p class="product-size">Talle: <%= product.size %></p>
                    <p class="product-description"><%= product.description %></p>
                    <p class="product-price">$<%= product.price %></p>
                    <div class="product-buttons">
                        <button class="btn btn-add-to-cart">Agregar al carrito</button>
                        <% if (isAdmin) { %>
                            <a href="/products/edit/<%= product.id %>" class="btn btn-edit">Editar</a>
                            <button class="btn btn-delete">Eliminar</button>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include("./partials/footer") %>
</body>
</html>
